{{#if products}}
<div class="row">
    <div class="col-sm-6 ml-sm-auto mr-sm-auto">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item">
                <span class="badge badge-pill badge-success">{{this.qty}}</span>
                <strong> {{ this.item.title}} </strong>
                <span class="badge badge-pill badge-success">$ {{ this.price}} </span>
                <div class="btn-group">
                    <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Action
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Separated link</a>
                    </div>
                </div>
            </li>
            {{/each}}

        </ul>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 ml-sm-auto mr-sm-auto">
        <strong>Total : {{totalPrice}}</strong>
    </div>
</div>
<hr>

<div class="row">
    <div class="col-sm-6 ml-sm-auto mr-sm-auto">
        <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 ml-sm-auto mr-sm-auto">
        <h2>No item in Cart </h2>
    </div>
</div>

{{/if}}