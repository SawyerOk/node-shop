        <div class="card">
            <img class="card-img-top img-fluid" src="{{this.imgPath}}" alt="Card image cap">
            <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <p class="card-text pr-desc">{{this.description}}</p>
            
                    <div class="price pull-right"> {{this.price}} $</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-info pull-left" role="button">Sign</a>
            </div>
